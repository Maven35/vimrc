"set tab as 4 spaces 
set tabstop=4
"search highlighting
set hlsearch
"ignore case
set ignorecase
"show partial matches
set incsearch
"allow backspace over indents, line breaks and insertion starts 
set backspace=indent,eol,start
"enable mouse scrolling
set mouse=a
"disable beeps
set noerrorbells
"highlight cursor
set cursorline
"show cursor position on line
set ruler
"show line numbers 
set number

